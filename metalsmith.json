{
  "source": "./src",
  "metadata": {
    "title": "IDE Patterns",
    "description": "A gallery for design patterns used in IDEs and code editors"
  },
  "plugins": {
    "metalsmith-collections": {
      "ides": {
        "pattern": "ide/*.md",
        "sortBy": "title"
      },
      "articles": {
        "pattern": "blog/*.md",
        "sortBy": "title"
      },
      "patterns": {
        "pattern": "pattern/*.md",
        "sortBy": "title"
      }
    },
    "metalsmith-markdown": {},
    "metalsmith-permalinks": {
      "pattern": ":path/:title"
    },

    "metalsmith-templates": {
      "engine": "handlebars",
      "partials": {
        "header": "_header.html"

    }
    }
  }
}
